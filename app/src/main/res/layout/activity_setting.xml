<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/Ivory2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/app_color">
        <ImageView
            android:id="@+id/activity_setting_back_btn"
            style="@style/title_img"/>
        <TextView
            style="@style/title_tv"
            android:text="设置"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_setting_update_pwd"
        style="@style/setting"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:text="修改密码"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Ivory2" />

    <TextView
        android:id="@+id/activity_setting_update_version"
        style="@style/setting"
        android:text="检查版本"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Ivory2" />

    <TextView
        android:id="@+id/activity_setting_update_privacy"
        style="@style/setting"
        android:text="隐私协议"/>

    <Button
        android:id="@+id/activity_setting_exit_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/exit_btn_bg"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="退出登录"/>

</LinearLayout>